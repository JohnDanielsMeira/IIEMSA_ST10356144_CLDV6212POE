@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-primary">
        <i class="fas fa-user"></i> Welcome, @User.Identity?.Name!
    </h1>
    <p class="lead">Your personalized customer dashboard</p>
</div>

<!-- Main Action Buttons -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <a asp-controller="Product" asp-action="Index" class="btn btn-success btn-lg w-100 h-100 d-flex flex-column justify-content-center text-white">
            <i class="fas fa-box fa-2x mb-2"></i>
            <span>Browse Products</span>
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-controller="Cart" asp-action="Index" class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column justify-content-center text-dark">
            <i class="fas fa-shopping-cart fa-2x mb-2"></i>
            <span>My Cart</span>
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column justify-content-center text-white">
            <i class="fas fa-clipboard-list fa-2x mb-2"></i>
            <span>My Orders</span>
        </a>
    </div>
</div>

<!-- Secondary Buttons -->
<div class="row">
    <div class="col-md-6 mb-3">
        <a asp-controller="Upload" asp-action="Index" class="btn btn-info btn-lg w-100 d-flex flex-column justify-content-center text-white">
            <i class="fas fa-upload fa-2x mb-2"></i>
            <span>Upload Payment Proof</span>
        </a>
    </div>
    <div class="col-md-6 mb-3">
        <a asp-controller="Home" asp-action="Privacy" class="btn btn-secondary btn-lg w-100 d-flex flex-column justify-content-center text-white">
            <i class="fas fa-user-shield fa-2x mb-2"></i>
            <span>View Privacy Policy</span>
        </a>
    </div>
</div>

<!-- Optional Info Section -->
<div class="mt-4 text-center">
    <p class="text-muted small">
        Use this dashboard to manage your shopping experience and view your order history.
    </p>
</div>
